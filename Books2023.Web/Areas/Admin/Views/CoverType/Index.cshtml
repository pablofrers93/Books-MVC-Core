@using Books2023.Models.Models
@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row w-75">
        <div class="col-6">
            <h2>Cover Types List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                New CoverType
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped w-75">
        <thead>
            <tr>
                <th style="width:50%"><label asp-for="@Model.First().Name"></label></th>
                <th style="width:25%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Edit
                            </a>
                            <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        No covers added yet
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
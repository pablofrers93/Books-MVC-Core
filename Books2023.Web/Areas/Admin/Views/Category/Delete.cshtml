@using Books2023.Models.Models
@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Category" asp-action="Delete" class="col-6">
    <div class="border p-4">
        <h2>Delete Category</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-3" style="width: 200px;">
                <i class="bi bi-trash3"></i>  &nbsp
                Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-success" style="width: 200px;">
                <i class="bi bi-skip-backward"></i> &nbsp
                Back to List
            </a>
        </div>
    </div>
</form>


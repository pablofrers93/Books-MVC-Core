@using Books2023.Models.Models
@model Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-controller="Category" asp-action="Edit" class="col-6">
    <div class="border p-4">
        <h2>Edit Category</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-warning me-3" style="width: 200px;">
                <i class="bi bi-pencil-square"></i> &nbsp
                Edit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-success" style="width: 200px;">
                <i class="bi bi-skip-backward"></i> &nbsp
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"></partial>
    }
}